version: 2
updates:
  - package-ecosystem: pip
    directory: /
    schedule:
      interval: weekly
      {% set day = ["monday", "tuesday", "wednesday", "thursday", "friday"] | random -%}
      day: {{ day }}
    # Group all dev dependency bumps into a single PR, but prod dependencies will still be one PR per dep
    # https://docs.github.com/en/code-security/dependabot/dependabot-version-updates/configuration-options-for-the-dependabot.yml-file#groups
    groups:
      development:
        dependency-type: development

  - package-ecosystem: github-actions
    directory: /
    schedule:
      interval: weekly
      {% set day = ["monday", "tuesday", "wednesday", "thursday", "friday"] | random -%}
      day: {{ day }}
